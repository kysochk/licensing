<Page x:Class="licensing.Avtorizacia"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:licensing"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Avtorizacia">

    <Grid>
        <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <GroupBox Height="200" Width="200" Header="Введите логин и пароль">
                <StackPanel VerticalAlignment="Center">
                    <TextBox x:Name="logtxt" Width="auto" Height="25px" Margin=" 0 0 0 10"/>
                    <PasswordBox  x:Name="PasswordTxt" Width="auto" Height="25px" Margin=" 0 0 0 10"/>
                    <Button x:Name="AvtorizBtn" Content="Авторизироваться" Margin="5" Click="AvtorizBtn_Click" IsDefault="True" />
                    <Button x:Name="RegisBtn" Content="Зарегистрироватся" Margin="5 0 5 0" Click="RegisBtn_Click"/>
                </StackPanel>
            </GroupBox>
        </WrapPanel>
    </Grid>
</Page>
