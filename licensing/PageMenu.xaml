<Page x:Class="licensing.PageMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:licensing"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageMenu">
    

    <Grid>
        <TextBlock Text="Выберите категорию:" FontSize="50" HorizontalAlignment="Center"/>
        <Button Style="{StaticResource  MaterialDesignRaisedLightButton}" Content="Игроки" FontSize="30" x:Name="PagePlaers" Margin="0 -50 0 0"   Click="PagePlaers_Click" Width="200" Height="50" RenderTransformOrigin="0.5,0.504" />
        <Button Style="{StaticResource MaterialDesignRaisedDarkButton}" Content="Тренера" FontSize="30" x:Name="PageCoach" Click="PageCoach_Click" Margin="0 70 0 0"  Width="200" Height="50" />
    </Grid>
</Page>
